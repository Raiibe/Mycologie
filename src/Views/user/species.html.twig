{% extends "layouts/layout.html.twig" %}

{% set title = 'Mes champignons' %}

{% set route = 'user.species' %}

{% block content %}
    <div class="mt-3">
        <h2>Mon compte</h2>
        <hr />

        <a class="btn btn-primary btn-slm mb-3" href="{{ path_for('user.view') }}">Voir mon profil</a>
    </div>

    <div class="mt-3">
        <h2>Mes champignons</h2>
        <hr />

        <a href="{{ path_for('species.addForm') }}" class="btn btn-primary btn-slm-white mb-3"><span class="fa fa-plus-circle fa-size-small"></span> Ajouter un champignon</a>

        {% if species | length > 0 %}
            <div class="row mt-4">
                {% for specie in species %}
                    <div class="card col-10 col-xl-5 col-lg-5 col-sm-10 col-md-5 mb-5 ml-5 p-0">
                        <img class="card-img-top" src="http://via.placeholder.com/350x150" alt="{{ specie.name_latin }}">
                        <div class="card-body">
                            <h5 class="card-title"><a href="{{ path_for('species.view', { 'specie_id': specie.id }) }}">{{ specie.name_latin }} - {{ specie.name_french }}</a></h5>
                            <p class="card-text"><strong>Comestibilité :</strong> {{ specie.getEdibility.status }}</p>
                            <p class="card-text"><strong>Statut trophique :</strong> {{ specie.getTrophicStatus.status }}</p>
                            <p class="card-text"><strong>Région :</strong> {% if specie.biotope_id != other.id %}{{ specie.getBiotope.region }}{% else %}{{ specie.other_region }}{% endif %}</p>
                            <div>
                                <a href="{{ path_for('species.view', { 'specie_id': specie.id }) }}" class="btn btn-primary btn-sm btn-slm mr-2 mb-2">Plus de détails</a>

                                {% if auth.id == specie.creator_id %}
                                    <div class="float-right">
                                        <a href="{{ path_for('species.editForm', { 'specie_id': specie.id }) }}" class="btn btn-primary btn-sm btn-slm mr-1"><span class="fa fa-edit fa-size-small"></span> Modifier</a>
                                        <a href="{{ path_for('species.deleteOne', { 'specie_id': specie.id }) }}" class="btn btn-danger btn-sm"><span class="fa fa-trash fa-size-small"></span> Supprimer</a>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info mt-4" role="alert">
                Vous n'avez créé aucun champignon !
            </div>
        {% endif %}

        {% if pagination %}
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item {% if pagination | first <= 1 %}disabled{% endif %}">
                        <a class="page-link" href="?page={{ pagination.currentPage - 1 }}{% if order %}&order={{ order }}{% endif %}{% if e %}&e={{ e }}{% endif %}{% if b %}&b={{ b }}{% endif %}{% if ts %}&ts={{ ts }}{% endif %}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>

                    {% for i in 1..pagination.lastPage %}
                        {% if i == 1 or i == pagination.currentPage - 3 or i == pagination.currentPage - 2 or i == pagination.currentPage - 1 or i == pagination.currentPage or i == pagination.currentPage + 1 or i == pagination.currentPage + 2 or i == pagination.currentPage + 3 or i == pagination.lastPage %}
                            <li class="page-item {% if pagination.currentPage == i or (pagination.currentPage <= 0 and i <= 1) or (pagination.currentPage > pagination.lastPage and i >= pagination.lastPage) %}active{% endif %}">
                                <a class="page-link" href="?page={{ i }}{% if order %}&order={{ order }}{% endif %}{% if e %}&e={{ e }}{% endif %}{% if b %}&b={{ b }}{% endif %}{% if ts %}&ts={{ ts }}{% endif %}">{{ i }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}

                    <li class="page-item {% if pagination.currentPage >= pagination.lastPage %}disabled{% endif %}">
                        <a class="page-link" href="?page={{ pagination.currentPage + 1 }}{% if order %}&order={{ order }}{% endif %}{% if e %}&e={{ e }}{% endif %}{% if b %}&b={{ b }}{% endif %}{% if ts %}&ts={{ ts }}{% endif %}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>

                </ul>
            </nav>
        {% endif %}
    </div>
{% endblock %}