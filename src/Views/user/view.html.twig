{% extends "layouts/layout.html.twig" %}

{% set title = 'Mon compte' %}

{% set route = 'user.view' %}

{% block content %}
    <div class="mt-3">
        <h2 class="text-center"><b>Mon compte</b></h2>
        <hr />

        <div>
            <div class="form-group">
                <label for="last_name"><h4>Nom :</h4></label>
                <input id="last_name" name="last_name" type="text" class="form-control form-control-lg" value="{{ user.last_name }}" disabled>
            </div>
            <div class="form-group">
                <label for="first_name"><h4>Prénom :</h4></label>
                <input id="first_name" name="first_name" type="text" class="form-control form-control-lg" value="{{ user.first_name }}" disabled>
            </div>
            <div class="form-group">
                <label for="mail"><h4>Email :</h4></label>
                <input id="mail" name="mail" type="text" class="form-control form-control-lg" value="{{ user.mail }}" disabled>
            </div>
        <div class="text-center">
            <a class="btn btn-primary btn-slm btn-lg mb-4" href="{{ path_for('user.edit') }}"><span class="fa fa-edit mr-3  align-middle"></span>Je veux modifier mes données</a>
            <a class="btn btn-lg btn-slm mb-4" href="{{ path_for('user.editPassword') }}"><span class="fa fa-key mr-3  align-middle"></span>Je veux changer mon mot de passe</a>

        </div>
        </div>
    </div>

    {% if auth.role != 'admin' %}
        <div class="mt-3">
            <h2>Mes champignons</h2>
            <hr />

            <a class="btn btn-primary btn-slm mb-3" href="{{ path_for('user.species') }}">Voir les espèces</a>
        </div>
    {% endif %}

    <div class="mt-3">
        <h2 class="text-center"><b>Plus d'options</b></h2>
        <hr />

        <div class="text-center">
            <div class="d-inline-block">
                <a class="btn btn-lg btn-slm-delete mt-3 mb-1" href="{{ path_for('user.delete') }}"><span class="fa fa-trash mr-3  align-middle"></span>Supprimer mon compte</a>
                <p><i class="text-danger h4">&#9888;</i> Cette action est irréversible !</p>
            </div>
        </div>
    </div>
{% endblock %}