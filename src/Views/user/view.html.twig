{% extends "layouts/layout.html.twig" %}

{% set title = 'Mon compte' %}

{% block content %}
    <div class="mt-3">
        <h2>Mon compte</h2>
        <hr />

        <div>
            <div class="form-group">
                <label for="last_name">Nom :</label>
                <input id="last_name" name="last_name" type="text" class="form-control" value="{{ user.last_name }}" disabled>
            </div>
            <div class="form-group">
                <label for="first_name">Prénom :</label>
                <input id="first_name" name="first_name" type="text" class="form-control" value="{{ user.first_name }}" disabled>
            </div>
            <div class="form-group">
                <label for="mail">Email :</label>
                <input id="mail" name="mail" type="text" class="form-control" value="{{ user.mail }}" disabled>
            </div>

            <a class="btn btn-primary btn-slm mb-3" href="{{ path_for('user.edit') }}">Modifier</a>
        </div>
    </div>

    <div class="mt-3">
        <h2>Plus d'options</h2>
        <hr />

        <div>
            <a class="btn btn-primary btn-slm float-left mb-3 mr-5" href="{{ path_for('user.editPassword') }}">Changer de mot de passe</a>
            <div class="d-inline-block">
                <a class="btn btn-warning mb-1" href="{{ path_for('user.delete') }}">Supprimer mon compte</a>
                <p><i class="text-danger h4">&#9888;</i> Cette action est irréversible !</p>
            </div>
        </div>
    </div>
{% endblock %}