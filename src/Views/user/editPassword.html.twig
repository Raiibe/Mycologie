{% extends "layouts/layout.html.twig" %}

{% set title = 'Edition mot de passe' %}

{% set route = 'user.editPassword' %}

{% block content %}
    <div class="mt-3">
        <h2>Modifier mot de passe</h2>
        <hr />

        <form action="{{ path_for('user.updatePassword') }}" method="post">
            {{ csrf() }}
            <div class="form-group">
                <label for="password_old">Mot de passe :</label>
                <input id="password_old" name="password_old" type="password" class="{% if flash.errors.password_old %}has-error{% endif %} form-control" autofocus required>
                <div class="has-error">
                    {% if flash.errors.password_old %}{{ flash.errors.password_old }}{% endif %}
                </div>
            </div>
            <div class="form-group">
                <label for="password">Nouveau mot de passe :</label>
                <input id="password" name="password" type="password" class="{% if flash.errors.password %}has-error{% endif %} form-control" required>
                <div class="has-error">
                    {% if flash.errors.password %}{{ flash.errors.password }}{% endif %}
                </div>
            </div>
            <div class="form-group mb-4">
                <label for="password_repeat">Mot de passe (v√©rification) :</label>
                <input id="password_repeat" name="password_repeat" type="password" class="{% if flash.errors.password_repeat %}has-error{% endif %} form-control" required>
                <div class="has-error">
                    {% if flash.errors.password_repeat %}{{ flash.errors.password_repeat }}{% endif %}
                </div>
            </div>

            <a class="btn btn-primary btn-slm-white mb-3 mr-3" href="{{ path_for('user.view') }}">Annuler</a>
            <input type="submit" class="btn btn-primary btn-slm mb-3" value="Sauvegarder">
        </form>
    </div>
{% endblock %}