{% extends "layouts/layout.html.twig" %}

{% set title = 'Edition mot de passe' %}

{% set route = 'user.editPassword' %}

{% block content %}
    <div class="mt-3">
        <h2 class="text-center"><b>Modifier mot de passe</b></h2>
        <hr />

        <form action="{{ path_for('user.updatePassword') }}" method="post">
            {{ csrf() }}
            <div class="form-group">
                <label for="password_old"><h4>Mot de passe :</h4></label>
                <input id="password_old" name="password_old" type="password" class="{% if flash.errors.password_old %}has-error{% endif %} form-control form-control-lg" autofocus required>
                <div class="has-error">
                    {% if flash.errors.password_old %}{{ flash.errors.password_old }}{% endif %}
                </div>
            </div>
            <div class="form-group">
                <label for="password"><h4>Nouveau mot de passe :</h4></label>
                <input id="password" name="password" type="password" class="{% if flash.errors.password %}has-error{% endif %} form-control form-control-lg" required>
                <div class="has-error">
                    {% if flash.errors.password %}{{ flash.errors.password }}{% endif %}
                </div>
            </div>
            <div class="form-group mb-4">
                <label for="password_repeat"><h4>Retapez le nouveau mot de passe (v√©rification) :</h4></label>
                <input id="password_repeat" name="password_repeat" type="password" class="{% if flash.errors.password_repeat %}has-error{% endif %} form-control form-control-lg" required>
                <div class="has-error">
                    {% if flash.errors.password_repeat %}{{ flash.errors.password_repeat }}{% endif %}
                </div>
            </div>

            <a class="btn btn-primary btn-lg btn-slm-delete mb-3 mr-3" href="{{ path_for('user.view') }}">Annuler</a>
            <input type="submit" class="btn btn-primary btn-lg btn-slm-white mb-3" value="Sauvegarder mon nouveau mot de passe">
        </form>
    </div>
{% endblock %}