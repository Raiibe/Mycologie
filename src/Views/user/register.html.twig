{% extends "layouts/layout.html.twig" %}

{% set title = 'Inscription' %}

{% block content %}
    <div class="mt-3">
        <h2>Inscription</h2>
        <hr />
        <form action="{{ path_for('user.register') }}" method="post">
            {{ csrf() }}
            <div class="form-group">
                <label for="last_name">Nom :</label>
                <input id="last_name" name="last_name" type="text" class="{% if flash.errors.last_name %}has-error{% endif %} form-control" value="{{ persistValues.last_name }}" placeholder="Nom" autofocus required>
                <div class="has-error">
                    {% if flash.errors.last_name %}{{ flash.errors.last_name }}{% endif %}
                </div>
            </div>
            <div class="form-group">
                <label for="first_name">Prénom :</label>
                <input id="first_name" name="first_name" type="text" class="{% if flash.errors.first_name %}has-error{% endif %} form-control" value="{{ persistValues.first_name }}" placeholder="Prénom" required>
                <div class="has-error">
                    {% if flash.errors.first_name %}{{ flash.errors.first_name }}{% endif %}
                </div>
            </div>
            <div class="form-group">
                <label for="mail">Email :</label>
                <input id="mail" name="mail" type="email" class="{% if flash.errors.mail %}has-error{% endif %} form-control" value="{{ persistValues.mail }}" placeholder="Email" required>
                <div class="has-error">
                    {% if flash.errors.mail %}{{ flash.errors.mail }}{% endif %}
                </div>
            </div>
            <div class="form-group">
                <label for="password">Mot de passe :</label>
                <input id="password" name="password" type="password" class="{% if flash.errors.password %}has-error{% endif %} form-control" required>
                <div class="has-error">
                    {% if flash.errors.password %}{{ flash.errors.password }}{% endif %}
                </div>
            </div>
            <div class="form-group mb-4">
                <label for="password_repeat">Mot de passe (vérification) :</label>
                <input id="password_repeat" name="password_repeat" type="password" class="{% if flash.errors.password_repeat %}has-error{% endif %} form-control" required>
                <div class="has-error">
                    {% if flash.errors.password_repeat %}{{ flash.errors.password_repeat }}{% endif %}
                </div>
            </div>

            <input type="submit" class="btn btn-primary btn-slm mb-3" value="S'inscrire">
            <p>Vous possédez déjà un compte ? <a href="{{ path_for('user.login.form') }}">Connectez-vous !</a></p>
        </form>
    </div>
{% endblock %}