{% extends "layouts/layout.html.twig" %}

{% set title = 'Création PDF' %}

{% set route = 'pdf.create' %}

{% block content %}
    <div class="mt-3">
        <h2>Création du PDF</h2>
        <hr />

        <div>
            <p>Parmi les champignons ci-dessous, sélectionnez ceux que vous souhaitez générer en fiche d'exposition.</p>
            {% if species | length > 0 %}
                <div class="row mt-4">
                    {% for specie in species %}
                        <div class="card col-10 col-xl-5 col-lg-5 col-sm-10 col-md-5 mb-5 ml-5 p-0">
                            <div class="card-body">
                                <a class="mr-4" href="{{ path_for('pdf.add', { 'specie_id': specie.id }) }}"><span class="fa fa-plus-circle fa-size-medium text-color-slm"></span></a>
                                <a href="{{ path_for('species.view', { 'specie_id': specie.id }) }}">{{ specie.name_latin }} - {{ specie.name_french }}</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-info mt-4" role="alert">
                    Auncun champignon n'est disponible !
                </div>
            {% endif %}

            {% if pagination %}
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item {% if pagination | first <= 1 %}disabled{% endif %}">
                            <a class="page-link" href="?page={{ pagination.currentPage - 1 }}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>

                        {% for i in 1..pagination.lastPage %}
                            {% if i == 1 or i == pagination.currentPage or i % 10 == 0 or i == pagination.lastPage %}
                                <li class="page-item {% if pagination.currentPage == i or (pagination.currentPage <= 0 and i <= 1) or (pagination.currentPage > pagination.lastPage and i >= pagination.lastPage) %}active{% endif %}">
                                    <a class="page-link" href="?page={{ i }}">{{ i }}</a>
                                </li>
                            {% endif %}
                        {% endfor %}

                        <li class="page-item {% if pagination.currentPage >= pagination.lastPage %}disabled{% endif %}">
                            <a class="page-link" href="?page={{ pagination.currentPage + 1 }}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>

                    </ul>
                </nav>
            {% endif %}
        </div>
    </div>
{% endblock %}