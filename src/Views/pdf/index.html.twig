{% set title = 'Pdf' %}

{% set route = 'pdf' %}

{% block content %}
    <!doctype html>
    <html class="no-js" lang="fr">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimal-ui" />

        <link rel="stylesheet" href="{{ uri }}/assets/bootstrap/css/bootstrap.css">
        <link rel="stylesheet" href="{{ uri }}/assets/bootstrap/css/bootstrap-reboot.min.css">
        <link rel="stylesheet" href="{{ uri }}/assets/bootstrap/css/bootstrap-grid.min.css">
    </head>
    <body>
    <div class="div">
        {% for i in 0..3 %}
            <div class="specie text-center">
                <div class="float-left mr-3 images">
                    <img src="{{ uri }}/assets/img/Logo_SLM.png" />
                    <img src="{{ qr_code(1) }}" />
                </div>

                <h6>{{ i }} Société Lorraine de Mycologie</h6>
                <hr class="bg-dark mt-0" />

                <p><strong><i>Toxique / Comestible avec recommandation. Parfois indigeste</i></strong></p>

                <div class="mt-4 mb-4">
                    <h5><strong><i>Clitocybe nebularis</i></strong></h5>
                    <h5>Clitocybe nébuleux</h5>
                </div>

                <div class="text-left">
                    <p>Biotope : Feuillus, en ronds</p>
                    <p>Pédologie : seteryrtytrtr</p>
                    <p>Confusion : <strong><i>Entocybe sinuatum</i></strong> - Entolome Livide Toxique</p>
                </div>
            </div>
        {% endfor %}
    </div>
    </body>
    </html>
{% endblock %}

    {% block css %}
        <style>
            html {
                margin: 10% 3%;
                padding: 0;
            }

            .specie {
                width: 50%;
                height: 50%;
                display: inline-block;
            }

            .images {
                width: 60px;
            }

            .images > img {
                width: 100%;
                height: auto;
            }
        </style>
    {% endblock %}