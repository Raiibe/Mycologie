<!doctype html>
<html class="no-js" lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title> {{ picker('app.name') }} {% if title is defined %} - {{ title }}{% endif %}</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimal-ui" />

    <link rel="stylesheet" href="{{ base_url() }}/assets/css/app.css">
    <link rel="stylesheet" href="{{ base_url() }}/assets/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="{{ base_url() }}/assets/bootstrap/css/bootstrap-reboot.min.css">
    <link rel="stylesheet" href="{{ base_url() }}/assets/bootstrap/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="{{ base_url() }}/assets/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    {% block css %}{% endblock %}

    <script type="text/javascript" src="{{ base_url() }}/assets/jquery/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="{{ base_url() }}/assets/bootstrap/js/popper.min.js"></script>
    <script type="text/javascript" src="{{ base_url() }}/assets/bootstrap/js/bootstrap.min.js"></script>
    {% block js %}{% endblock %}
</head>
<body>
    {% block navbar %}
        {% include 'template/navbar.html.twig' %}
    {% endblock %}

    <div class="container">
        {% block flash %}
            {% include 'template/flash.html.twig' %}
        {% endblock %}

        {% block content %}{% endblock %}
    </div>

    {% block footer %}
        {% include 'template/footer.html.twig' %}
    {% endblock %}
</body>
</html>
