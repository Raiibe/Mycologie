{% extends "layouts/layout.html.twig" %}

{% set title = 'Champignons' %}

{% set route = 'species' %}

{% block content %}
    <div class="mt-3">
        <h2>{{ specie.name_latin }}</h2>
        <hr />

        <div class="row">
            <div class="col-md-12 mb-5">
                <div class="text-center">
                    <h3 class="display-4">{{ specie.name_french }}</h3>
                </div>
            </div>
            <div class="col-md-6">
                <h3><u>Région :</u></h3>
                {% if specie.getBiotope.region %}
                <p>- {{ specie.getBiotope.region }}</p>
                {% else %}
                <p>- Non renseigné</p>
                {% endif %}
            </div>
            <div class="col-md-6">
                <h3><u>Statut trophique :</u></h3>
                {% if specie.getTrophicStatus.status %}
                <p>- {{ specie.getTrophicStatus.status }}</p>
                {% else %}
                <p>- Non renseigné</p>
                {% endif %}
            </div>
            <div class="col-md-6">
                <h3><u>Comestibilité :</u></h3>
                {% if specie.getEdibility.status %}
                <p>- {{ specie.getEdibility.status }}</p>
                {% else %}
                <p>- Non renseigné</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}