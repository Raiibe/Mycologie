{% extends "layouts/layout.html.twig" %}

{% set title = 'Champignons' %}

{% block content %}
    <div class="mt-3">
        <h2>Champignons</h2>
        <hr />
        <div class="row mt-4">
            {% for specie in species %}
                <div class="card col-10 col-xl-5 col-lg-5 col-sm-10 col-md-5 mb-5 ml-5 p-0">
                    <img class="card-img-top" src="http://via.placeholder.com/350x150" alt="{{ specie.name_latin }}">
                    <div class="card-body">
                        <h5 class="card-title"><a href="#">{{ specie.name_latin }} - {{ specie.name_french }}</a></h5>
                        <p class="card-text"><strong>Comestibilité :</strong> {{ specie.getEdibility.status }}</p>
                        <p class="card-text"><strong>Statut trophique :</strong> {{ specie.getTrophicStatus.status }}</p>
                        <p class="card-text"><strong>Région :</strong> {{ specie.getBiotope.region }}</p>
                        <a href="#" class="btn btn-primary btn-slm">Plus de détails</a>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% if pagination %}
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item {% if pagination|first <= 1 %}disabled{% endif %}">
                        <a class="page-link" href="?page={{ pagination.currentPage - 1 }}&order={{ order }}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>

                    {% for i in 1..pagination.lastPage %}
                        <li class="page-item {% if pagination.currentPage == i %}active{% endif %}">
                            <a class="page-link" href="?page={{ i }}&order={{ order }}">{{ i }}</a>
                        </li>
                    {% endfor %}

                    <li class="page-item {% if pagination.currentPage >= pagination.lastPage %}disabled{% endif %}">
                        <a class="page-link" href="?page={{ pagination.currentPage + 1 }}&order={{ order }}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>

                </ul>
            </nav>
        {% endif %}
    </div>
{% endblock %}